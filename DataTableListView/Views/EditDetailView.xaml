<Window
    x:Class="DataTableListView.Views.EditDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:DataTableListView.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DataTableListView.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Path=WindowTitel, FallbackValue=~WindowTitel}"
    Width="800"
    Height="450"
    ShowInTaskbar="False"
    Tag="{DynamicResource ResourceKey=AppWindowIcon}"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Window.Icon>
        <DrawingImage Drawing="{Binding Path=Tag.Drawing, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.Icon>

    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Orientation="Horizontal">
            <Button
                x:Name="BtnCloseDialog"
                Width="40"
                Height="40"
                HorizontalAlignment="Left"
                ToolTip="Dialog beenden">
                <Image Source="{StaticResource ResourceKey=IconApplicationExit2}" Stretch="None" />
            </Button>

            <Button
                x:Name="BtnSaveRow"
                Width="40"
                Height="40"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                ToolTip="Alle Änderungen speichern">
                <Image Source="{StaticResource ResourceKey=IconSaveRow}" Stretch="None" />
            </Button>
        </StackPanel>

        <Rectangle
            Grid.Row="0"
            Height="2"
            Margin="0,40,0,0"
            HorizontalAlignment="Stretch"
            Fill="Black" />

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Kapitel" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="80"
                Height="25"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                Text="{Binding Path=CurrentRow[Kapitel], UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Thema" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="400"
                Height="25"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                Text="{Binding Path=CurrentRow[KapitelTitel], UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Beschreibung" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Width="600"
                Height="25"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                Text="{Binding Path=CurrentRow[Titel], UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Aufwand Min" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Width="50"
                Height="25"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                Text="{Binding Path=CurrentRow[AufwandMin], UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <behavior:TextBoxInputBehavior
                        DecimalPlace="2"
                        EscapeClearsText="True"
                        InputMode="DecimalInput"
                        JustPositivDecimalInput="True" />
                </i:Interaction.Behaviors>
            </TextBox>

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Aufwand Mittel" />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Width="50"
                Height="25"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                Text="{Binding Path=CurrentRow[AufwandMid], UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <behavior:TextBoxInputBehavior
                        DecimalPlace="2"
                        EscapeClearsText="True"
                        InputMode="DecimalInput"
                        JustPositivDecimalInput="True" />
                </i:Interaction.Behaviors>
            </TextBox>

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Aufwand max" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Width="50"
                Height="25"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                Text="{Binding Path=CurrentRow[AufwandMax], UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <behavior:TextBoxInputBehavior
                        DecimalPlace="2"
                        EscapeClearsText="True"
                        InputMode="DecimalInput"
                        JustPositivDecimalInput="True" />
                </i:Interaction.Behaviors>
            </TextBox>

            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Aktion" />
            <ComboBox
                Grid.Row="6"
                Grid.Column="1"
                Width="150"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                DisplayMemberPath="[Value]"
                IsEditable="True"
                IsTextSearchCaseSensitive="False"
                IsTextSearchEnabled="True"
                ItemsSource="{Binding Path=AktionSource}"
                SelectedValue="{Binding Path=CurrentRow[AktionId], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                SelectedValuePath="[Id]"
                StaysOpenOnEdit="True" />

            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                FontWeight="Medium"
                Text="Aktiv" />
            <CheckBox
                Grid.Row="7"
                Grid.Column="1"
                Margin="0,3,0,3"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=CurrentRow[Aktiv]}"
                IsThreeState="True" />
        </Grid>
    </Grid>
</Window>
